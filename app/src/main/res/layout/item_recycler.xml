<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"

    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ic_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_dropdown2" />

    <TextView
        android:id="@+id/tv_area_vida"
android:layout_toRightOf="@id/ic_dropdown"
        tools:text="PROFISSIONAL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_objetivo"
    android:layout_below="@id/tv_area_vida"
        android:layout_toRightOf="@id/ic_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Objetivo"/>

    <TextView
        android:id="@+id/tv_tarefa"
        android:layout_toRightOf="@id/ic_dropdown"
        android:layout_below="@id/tv_objetivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Tarefa"/>

</RelativeLayout>